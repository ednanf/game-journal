{
  "name": "game-journal-backend",
  "version": "1.0.1",
  "description": "Backend for Game Journal web application",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env --import tsx --watch src/server.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "check": "tsc --watch --noEmit",
    "clean": "rm -rf node_modules .turbo node_modules/.cache dist .tsbuildinfo",
    "rebuild": "npm run clean && npm install && npx tsc --force",
    "build": "tsc",
    "start": "node dist/server.js"
  },
  "keywords": [
    "backend",
    "typescript",
    "nodejs",
    "express",
    "mongodb",
    "mern"
  ],
  "author": "Ednan Rog√©rio Frizzera Filho",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-xss-sanitizer": "^2.0.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.5",
    "morgan": "^1.10.1",
    "ms": "^2.1.3",
    "validator": "^13.15.15",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-xss-sanitizer": "^2.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "~5.5.0"
  }
}
